.newAdress {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #a50101;
  font-size:24rpx;
  color: #fff;
}
page {
  background-color: #f0f0f0;
}
.adress {
  margin-top: 80rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: #fff;
}
.adressList {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.adressList:nth-last-of-type(1) {
  border: none;
}
.box {
  background-color: #f0f0f0;
}
.adressBox {
  font-size:24rpx;
}
.adressBox view {
  height: 50rpx; 
  line-height: 50rpx;
}
.arrow {
  display: block;
  margin-top: 40rpx;
  width: 13rpx;
  height: 19rpx;
}