page {
  background-color: #000;
}
.title {
  margin-top: 300rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  color: #fff;
}
.active {
  border-bottom: 1rpx solid #fff;
}
.allMessage {
  margin-top: 20rpx;
  padding:  0 20rpx;
  box-sizing: border-box;
}
.phone,
.password,
.login {
  position: relative;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size:24rpx;
}
.phone image {
  position: absolute;
  left: 40rpx;
  top: 16rpx;
  width: 27rpx;
  height: 48rpx;
}
.passwordImage {
  position: absolute;
  left: 40rpx;
  top: 16rpx;
  width: 37rpx;
  height: 46rpx;
}
.codeImage {
  position: absolute;
  left: 33rpx;
  top: 16rpx;
  width: 39rpx;
  height: 45rpx;
}
.close {
  position: absolute;
  right: 40rpx !important;
  top: 21rpx !important;
  width: 58rpx;
  height: 37rpx;
}
.login {
  background-color: #fe9127;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  color:#fff;
}
.placeholder {
  font-size: 24rpx;
}
.code {
  position: absolute;
  top: 0;
  right: 20rpx;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #fe9127;
  z-index: 9;
}
.text {
  color: #fe9127;
  font-size: 24rpx;
}
.box {
  padding:  0 20rpx;
}