.headImg {
  width: 100%;
  height: 630rpx;
}
.headImg swiper {
  height: 630rpx;
}
.headImg image {
  width: 100%;
  height:630rpx;
}
.wx-swiper-dots{position:relative;}
.wx-swiper-dots.wx-swiper-dots-horizontal{
margin-bottom: 40rpx;
}
.title {
  padding-left: 20rpx;
  padding-top: 24rpx;
  width: 100%;
  height: 130rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.title {
  font-size: 32rpx;
  font-weight: 700;
}
.title view:nth-of-type(2) {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #7d7d7d;
}
.shadow {
  width: 100%;
  height: 24rpx;
  background-color: #efefef;
}
.content,
.time {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.content image,
.time image {
  display: block;
  margin-top: 28rpx;
  width: 25rpx;
  height: 25rpx;
} 
.arrow {
  position: absolute;
  top: 0;
  right: 20rpx;
  /* width: 40rpx; */
  height: 80rpx;
}
.boxAll {
  width: 100%;
  /* height: 1334rpx; */
  z-index: -10;
}
.box {
  position: fixed;
  /* top: -1334rpx; */
  top: 0;
  width: 100%;
  height: 700rpx;
  background-color: rgba(0,0,0,.5);
  transition: all 1s;
}
.box1 {
  position: fixed;
  /* top: -1334rpx; */
  top: 0;
  width: 100%;
  height: 700rpx;
  background-color: rgba(0,0,0,0);
  transition: all 1s;
  z-index: -10;
}
.picker {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 800rpx;
  background-color: #fff;
  transition:  .5s;
}
.picker1 {
  position: fixed;
  bottom:0;
  width: 100%;
  height: 0rpx;
  /* background-color: #fff; */
  background-color: rgba(0,0,0,0);
  transition:  .5s;
  z-index: -10;
}
.palceOrder {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  -moz-box-shadow: 0rpx 0rpx 4rpx #c8c4c4;
  -webkit-box-shadow: 0px 0px 4rpx #c8c4c4;
  box-shadow: 0px 0px 8rpx #c8c4c4;
}
.icon {

  box-sizing: border-box;
  width: 35%;
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
}
.order {
  width: 60%;
  height: 100%;
  line-height: 130rpx;
  text-align: center;
  background-color: #fe3c66;
  color: #fff;
  font-size: 28rpx;
}
.shopIcon image,
.collIcon image,
.shareIcon image {
  display: block;
  margin: 0 auto;
  width: 34rpx;
  height: 34rpx;
  margin-bottom: 10rpx;
}
.shopIcon,
.collIcon,
.shareIcon {
  padding-top: 45rpx;
  width: 30%;
  text-align: center;
}
.evaluate {
  width:100%;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  /* margin-bottom: 140rpx; */
}
.shop {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.shopMessage {
  width: 100%;
  height: 140rpx;
  display: flex;
  background-color: #fff;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #ccc;

}
.shopImg { 
  width: 105rpx;
  height: 105rpx;
}
.shopImg image {
  width: 100%;
  height: 100%;
}

.shopName,
.shopPosition,
.shopContent {
  font-size: 24rpx;
  color: #7d7d7d;
}
.shopName {
  font-weight: 700;
  color: #000;
}
.authentication {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  font-size: 24rpx;
  color: #7d7d7d;
}
.authentication image {
  display: block;
  width: 160rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.service {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-top: 20rpx;
  background-color: #fff;
  margin-bottom: 140rpx;
}
.serviceTitle {
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
.serviceContent {
  font-size: 24rpx;
}
