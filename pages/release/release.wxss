.releseLeft {
  position: fixed;
  left: 0;
  width: 150rpx;
  background-color: #fff;
}

.releseTitle {
  width: 100%;
  border: 1rpx solid #ececec;
  border-top: none;
  height: 90rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 86rpx;
  font-size: 20rpx;
  color: #000;
}

.releseTitle:nth-of-type(1) {
  border-top: 1rpx solid #ececec;
}

.release {
  background-color: #f6f6f6;
  display: flex;
}

.active {
  border-right: 0;
  color: #ff6302;
  background-color: #f6f6f6;
}

.releseRight {
  width: 100%;
  padding-left: 175rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.contentBox {
  width: 100%;
}

.boxTitle {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  font-weight: 700;
}

.boxSelect {
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-flow: row wrap;
  /* justify-content: space-around; */
  align-items: center;
}

.boxIcon {
  width: 33.3%;
  height: 140rpx;
  background-color: #fff;
  text-align: center;
  font-size: 24rpx;
  padding: 0 35rpx;
  box-sizing: border-box;

}
.boxIcon image {
  margin-top: 25rpx;
  width: 70rpx;
  height: 70rpx;
}