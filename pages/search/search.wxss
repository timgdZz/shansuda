page {
  background-color: #f0f0f0;
}

.box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  padding-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.box input {
  position: relative;
  float: left;
  background-color: #f2f2f2;
  width: 90%;
  height: 60rpx;
  border-radius: 20rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}

.box text {
  float: right;
  font-size: 24rpx;
  line-height: 60rpx;
}

.box image {
  position: absolute;
  left: 15rpx;
  top: 8rpx;
  display: inline-block;
  width: 35rpx;
  height: 40rpx;
  margin-right: 10rpx;

}

.history {
  margin-top: 20rpx;
  padding: 0 40rpx;
  width: 100%;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;

}

.history view {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  margin-bottom: 50rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  font-size: 24rpx;
}

.clear {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fe9127;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}